            <%= options_for_select([['10', section_path(params.merge(:limit => 10))], ['20', section_path(params.merge(:limit => 20))], ['Все', section_path(params.merge(:limit => 'all'))]], section_path(params)) %>
        </select>
    </div>
    <!--div class="product-compare"><a href="#" id="compare-total">Сравнить товары (0)</a></div-->
