<h1><%= @section.name %></h1>

<div class="product-filter">
    <div class="sort"><b>Сортировать:</b>
        <select id="sags" class="js-limitFilter">
            <%= options_for_select([['', section_path(params.merge(:sort_by => ''))], ['По цене', section_path(params.merge(:sort_by => 'price'))], ['По имени', section_path(params.merge(:sort_by => 'name'))]], section_path(params)) %>
        </select>
    </div>
