<div class="center-col">
    
    <% if !@promos.empty? %>
	<div class="slideshow">
		<div id="slideshow0" class="nivoSlider" style="width: 300px; height: 400px;">
			
			<% @promos.each do |promo | %>
			<a  href="#">
				<img title="&lt;div class=&quot;bann-price&quot;&gt; 	&lt;span class=&quot;second&quot;&gt;<%= promo.sum %>&lt;/span&gt; &lt;span class=&quot;first&quot;&gt;р&lt;/span&gt; &lt;span class=&quot;third&quot;&gt;&lt;/span&gt;&lt;span class=&quot;four&quot;&gt;скидка <%= promo.discount %>%&lt;/span&gt;     &lt;div class=&quot;name&quot;&gt; <%= promo.name %> &lt;/div&gt;     &lt;span&gt; <%= promo.text %> &lt;/span&gt;     &lt;div class=&quot;but-container&quot;&gt;     	     &lt;/div&gt; &lt;/div&gt;" src="<%= promo.promo_image.image.url(:slideshow) %>" />
			</a>
			<% end %>
			

		</div>
	</div>
    <script type="text/javascript">
    $(document).ready(function() {
        $('#slideshow0').nivoSlider({
            effect: 'random',
            animSpeed: 500 ,
            pauseTime:15000,
            slices:20,
            captionOpacity:1,
            controlNavThumbs:false,
            controlNavThumbsFromRel:false,
            controlNavThumbsSearch: '.jpg',
            controlNavThumbsReplace: '_thumb.jpg',
            prevText: 'Prev',
            nextText: 'Next'
        });
    });

    </script> 

    <% end %>

    
    <div class="wrapper">
        <div class="box new-products">
            <div class="box-content">
                <div class="box-shining">
                    <div class="box-heading">Новинки</div>
                    
                    <script type="text/javascript">
                        $(function(){
                            var Products = new ProductsCollection;
                            Products.reset(<%= @products.to_json(:methods => [:preview_medium, :fast_to_cart]).html_safe %>);
                        });
                        
                    </script>
                   
                    <div class="box-product">
                        <ul>
                            <% if @products.length == 0 %>
                                Товары в каталоге отсутствуют.
                            <% end %>
                            <% @products.each do |product| %>
                            <li>
                                <div class="padd-both">
                                    <div class="image2">
                                        <a href="#"><%= image_tag( product.pictures.first.image.url(:medium) ) %></a>
                                    </div>
                                    <div class="price"> <%= product.price %>р </div>
                                    <div class="name maxheight">
                                        <%= link_to product.name, product %>
                                    </div>
                                    <div class="cart"> 
                                        <a href="#" class="button addToCart js-addToCart" rel="<%= product.id %>"><span>В корзину</span></a>
                                        <%= link_to(product, :class => "button details") do %>
                                            <span>Детально</span>
                                        <% end %>
                                    </div>
                                </div>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>