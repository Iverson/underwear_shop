<% @profile = true %>

<h1>Редактировать мои данные</h1>
<div class="box-container">

    <h2>Ваши персональные данные</h2>
    <div class="content">
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

        <table class="form b-register-form">
            <tbody>
                <tr>
                    <td>Имя:</td>

                    <td>
                        <div class="b-input">
                            <%= f.input :first_name, :label => false %>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Фамилия:</td>

                    <td>
                        <div class="b-input">
                            <%= f.input :last_name, :label => false %>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>E-Mail:</td>

                    <td>
                        <div class="b-input">
                            <%= f.input :email, :label => false %>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Телефон:</td>

                    <td>
                        <div class="b-input">
                            <%= f.input :phone, :label => false %>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Пароль:</td>

                    <td>
                        <div class="b-input">
                            <%= f.input :password, :label => false %>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Подтверждение пароль:</td>

                    <td>
                        <div class="b-input">
                            <%= f.input :password_confirmation, :label => false %>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <div class="buttons">
                            <%= f.button :submit, "Изменить", :class => "b-btn" %>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

        <% end %>


    </div>
	
</div>


