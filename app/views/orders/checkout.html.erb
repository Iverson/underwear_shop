$(document).ready(function() {
    
    checkoutTabs = $('.js-checkoutStepCont');
    
    $('#button-account').click(function()
    {
        if ( $('#checkout .checkout-content input#register')[0].checked ) {

        } else {
            checkoutTabs.filter('.active').removeClass('active').find('.checkout-content').slideUp('slow');
            checkoutTabs.eq(1).addClass('active').find('.checkout-content').slideDown('slow');
            $(checkoutTabs[0]).addClass('complete');
            
            return false;
        }
    });

