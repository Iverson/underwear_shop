<ul>
    <% if (products.length == 0) { %>
        
        Товары в каталоге отсутствуют.
        
    <% } else { %>
        <% products.each(function(product) { %>
        <li class="js-product">
            <div class="padd-both">
                <div class="image2">
                    <a href="<%= Routes.product_path(product.get('uri')) %>">
                        <img class="js-productImage" src="<%= product.get('preview_medium') %>" alt="" />
                    </a>
                </div>
                <div class="price"> <%= product.get('price') %>р </div>
                <div class="name maxheight">
                    <a href="<%= Routes.product_path(product.get('uri')) %>"><%= product.get('name') %></a>
                    
                </div>
                <div class="cart"> 
                    <a href="#" class="button addToCart js-addToCart" data-fastadd="<%= product.get('fast_to_cart') %>" rel=""><span>В корзину</span></a>
                    <a href="<%= Routes.product_path(product.get('uri')) %>" class="button details">
                        <span>Детально</span>
                    </a>
                </div>
            </div>
        </li>
        <% }); %>
    <% } %>
</ul>